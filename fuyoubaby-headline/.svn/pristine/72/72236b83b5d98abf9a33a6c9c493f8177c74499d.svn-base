<body>
<div class="page">
	<header class="bar bar-nav head-bg">
		<a class="pull-left" onclick="back()"><img src="/resources/images/black-icon.png" class="black-icon"></a>
		<h1 class="title">评论管理(0)</h1>
	</header>
	<div class="comment-sec" id="comment_sec" style="margin-top: 2.2rem;">
		<script id="typefloorList" type="text/html">
			<section>
				{{each info as ifo}}
				<article class="comment-item">
					{{if ifo.userHeadImage == ""}}
					<span style="background-image:url(/resources/images/tx_mr4.png);" class="item-head"></span>
					{{else}}
					<span style="background-image:url({{ifo.userHeadImage}});" class="item-head"></span>
					{{/if}}
					<div>
						<p class="item-p0 clearfix">
							<!--<a href="javascript:;" hidden="hidden" id="hacArticleId">{{ifo.hacArticleId}}</a>-->
							<span style="color:#31567f;">{{ifo.userName}}</span>
							{{if ifo.hasLike == "Y"}}
							<span class="clickPraise"><img src="/resources/images/yizan.png" id="{{ifo.hacId}}"><i style="color:#f84a4b">{{ifo.hacLikeCount}}</i></span>
							{{else}}
							<span class="clickPraise"><img src="/resources/images/zan.png" id="{{ifo.hacId}}" onclick="zan(this)"><i style="color:#90a2af">{{ifo.hacLikeCount}}</i></span>
							{{/if}}
						</p>
						<p class="item-p1">{{ifo.hacContent}}</p>
						<time>{{ifo.hacCreateTime}}</time>
						{{if ifo.hacUserId == userId }}
						<span class="clickDel" id="{{ifo.hacId}}" onclick="detel(this.id)">删除</span>
						{{/if}}
					</div>
				</article>
				{{/each}}
			</section>
		</script>
	</div>
	<footer class="detail-footer">
		<div class="pull-left" style="width:78%">
			<img src="/resources/images/pinglun-b.png">
			<input type="text" placeholder="写评论..." id="comment" maxlength="200">
			<input type="hidden"  id="userId">
			<input type="hidden"  id="articleId">
		</div>
		<div class="pull-right" style="width:15%;float: right;">
			<a href="javascript:;" id="pinglun" style="float: right;margin-right:0;width:85%">发送</a>
		</div>
	</footer>

</div>
<script>
    var page = 2;
    $(function(){
        $(window).scroll(function () {
            //$(window).scrollTop()这个方法是当前滚动条滚动的距离
            //$(window).height()获取当前窗体的高度
            //$(document).height()获取当前文档的高度
            var bot = 50; //bot是底部距离的高度

            if ((bot + $(window).scrollTop()) >= ($(document).height() - $(window).height())) {
                //当底部基本距离+滚动的高度〉=文档的高度-窗体的高度时；
                //我们需要去异步加载数据了
                //debugger;
                var articleId = sanmi.queryParam("articleId");
                var userId = sanmi.queryParam("userId");
                var param = {
                    url: '/headline/article/comment/list',
                    data: {
                        'articleId': articleId,
                        'userId': userId,
                        'page': page,
                    },
                    method: 'post',
                    dataType: 'json',
                    callback: 'articleCommentaHander',
                }
                sanmi.query(param);
                // $.getJSON("url", { page: "2" }, function (str) { $.alert(str); });
            }

        });
        var userId = $("#userId").val();
        var articleId = $("#articleId").val();
        /*			$(e).find(".clickPraise").click(function(){
                        if (userId == null || userId == "" || userId == "null"){
                            $.alert("暂未登陆,请登录");
                            window.location.href="/view/login.html";
                            return false;
                        }
                        if($(this).find("img").attr("src")=="/resources/images/zan.png"){
                            var num=parseInt($(this).find("i").html());
                            $(this).find("img").attr("src","/resources/images/yizan.png");
                            $(this).find("i").css("color","#f84a4b");
                            $(this).find("i").html(num+1);
                        }
                        var commentId = $(this).find("img").attr("id");
                        var param = {
            url: '/headline/article/comment/like',
            data: {
                'commentId': commentId,
                'userId': userId,
            },
            method: 'post',
            dataType: 'json',
            callback: 'commentHander',
                    }
            sanmi.query(param);
                    })*/
        //评论逻辑实现
        $("#pinglun").click(function(){
            if (userId == null || userId == "" || userId == "null"){
                $.alert("暂未登陆,请登录");
                window.location.href="/view/login.html";
                return false;
            }
            var comment =  $("#comment").val();
            if (comment == ""){
                $.alert("评论内容不能为空");
                return;
            }
            var param = {
                url: '/headline/article/comment/create',
                data: {
                    'content': comment,
                    'userId': userId,
                    'articleId': articleId,
                },
                method: 'post',
                dataType: 'json',
                callback: 'commentHander',
            }
            sanmi.query(param);
        })

    })
    function articleCommentaHander(json) {
        var status = json.status;
        //console.info(status);
        if(status == "0") {
            $.$.alert(json.msg);
            //sanmi.toPage("/index.html");
            return;
        }
        var html = template('typefloorList', json);
        console.info(json);
        //console.info(html);
        //$(".typeList").html(html);
        var oldhtml =  document.getElementById('comment_sec').innerHTML;
        //console.info("原网页内容"+oldhtml);
        var html = template('typefloorList', json);
        document.getElementById('comment_sec').innerHTML = oldhtml+html ;
        page++;
    }
    function back(){
        //debugger;
        /*var userId = $("#userId").val();
        var articleId = $("#articleId").val();
        window.location.href="detail.html??articleId="+articleId+"&userId="+userId;*/
        window.history.back();
    }
    function commentHander(json) {
        var articleId = sanmi.queryParam("articleId");
        var userId = sanmi.queryParam("userId");
        var status = json.status;
        console.info(status);
        if(status == "0") {
            $.alert(json.msg);
            //sanmi.toPage("/index.html");
            return;
        }
        $.alert("评论成功!");
        $("#comment").val("");
        location.reload();
    }
    function  zan(value) {
        console.log(value);
        console.log(value.id);
        //debugger;
        var userId = $("#userId").val();
        //com(this);
        //判断登录状态,跳转登录页面
        if (userId == null || userId == "" || userId == "null") {
            $.alert("暂未登陆,请登录");
            window.location.href = "/view/login.html";
            return false;
        }
        //  value.attr("src", "/resources/images/yizan.png");
        var param = {
            url: '/headline/article/comment/like',
            data: {
                'commentId': value.id,
                'userId': userId,
            },
            method: 'post',
            dataType: 'json',
            callback: 'likeHander',
        }
        sanmi.query(param);
    }
    function  detel(value) {
        var userId = $("#userId").val();
        //com(this);
        //判断登录状态,跳转登录页面
        if (userId == null || userId == "" || userId == "null") {
            $.alert("暂未登陆,请登录");
            window.location.href = "/view/login.html";
            return false;
        }
        var param = {
            url: '/headline/article/comment/delete',
            data: {
                'commentId': value,
                'userId': userId,
            },
            method: 'post',
            dataType: 'json',
            callback: 'deleteCommentHander',
        }
        sanmi.query(param);
    }
    function likeHander(json) {
        var status = json.status;
        //console.info(status);
        if (status == "0") {
            $.alert(json.msg);
            //sanmi.toPage("/index.html");
            return;
        }
        $.alert("点赞成功")
        location.reload();
    }
    function deleteCommentHander(json) {
        var status = json.status;
        //console.info(status);
        if (status == "0") {
            $.alert(json.msg);
            //sanmi.toPage("/index.html");
            return;
        }
        $.alert("删除评论成功");
        location.reload();
    }
</script>
</body>
</html>
