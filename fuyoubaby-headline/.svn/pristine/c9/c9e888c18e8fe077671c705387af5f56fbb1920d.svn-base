<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="expires" content="60">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1.0,maximum-scale=1.0, user-scalable=0" name="viewport" /> 
	    <link rel="stylesheet" href="../css/sm.min.css" />
		<link rel="stylesheet" href="../css/reset.css" />		
		<link rel="stylesheet" href="../css/css.css" />
	</head>
	<body>
		<div class="page">
			<header class="bar bar-nav head-bg">
				<a class="icon icon-left pull-left" href="person-info.html"></a>
                <h1 class="title">修改绑定手机</h1>
                <a class="pull-right save-icon" href="javascript:;" id="bind">保存</a>
            </header>
			<div class="content">
				<div class="list-block bd-phone" style="margin:0;font-size: 0.7rem;">
					<ul>
						<li>
					        <div class="item-content">
					          <div class="item-media"><i class="icon icon-form-name"></i></div>
					          <div class="item-inner">
					            <div class="item-title label">原手机号码</div>
					            <div class="item-input">
					              <input type="text" name="phone" id="phone">
					            </div>
					          </div>
					        </div>
					    </li>
					    <li>
					        <div class="item-content">
					          <div class="item-media"><i class="icon icon-form-name"></i></div>
					          <div class="item-inner">
					            <div class="item-title label">登录密码</div>
					            <div class="item-input">
					              <input type="text" placeholder="输入登录密码">
					            </div>
					          </div>
					        </div>
					    </li>
					    <li>
					        <div class="item-content">
					          <div class="item-media"><i class="icon icon-form-name"></i></div>
					          <div class="item-inner">
					            <div class="item-title label">动态码</div>
					            <div class="item-input">
					                <input type="text" id="dy-code">
					                <div class="dy-d">
					                	<img id="dtmImage" src=""><a href="javascript:;" id="invisibility">换一张</a>
					                </div>
					            </div>
					          </div>
					        </div>
					    </li>
					    <li>
					        <div class="item-content">
					          <div class="item-media"><i class="icon icon-form-name"></i></div>
					          <div class="item-inner">
					            <div class="item-title label">新手机号</div>
					            <div class="item-input">
					              <input type="text" name="newPhone" id="newPhone" placeholder="输入新手机号">
					            </div>
					          </div>
					        </div>
					    </li>
					    <li>
					        <div class="item-content">
					          <div class="item-media"><i class="icon icon-form-name"></i></div>
					          <div class="item-inner">
					            <div class="item-title label">验证码</div>
					            <div class="item-input">
					                <input type="text" id="valid-code" placeholder="输入手机验证码">
					                <input type="button" id="valid-free" value="获取验证码" onclick="settime(this)" /> 
					            </div>
					          </div>
					        </div>
					    </li>
					</ul>
				</div>
			</div>
		</div>
		<script type="text/javascript" src="../js/zepto.min.js" ></script>
		<script type="text/javascript" src="../js/sm.min.js" ></script>
		<script type="text/javascript" src="../base/httpClient.js"></script>
		<script type="text/javascript" src="../listjs/bind_phone.js"></script>
		<script>
			var countdown=60; 
			function settime(obj) { 
			    if (countdown == 0) { 
			        obj.removeAttribute("disabled");    
			        obj.value="获取验证码"; 
			        countdown = 60; 
			        return;
			    } else { 
			        obj.setAttribute("disabled", true); 
			        obj.value="重新发送(" + countdown + ")"; 
			        countdown--; 
			    } 
			setTimeout(function() { 
			    settime(obj) }
			    ,1000) 
			}
		</script>
	</body>
</html>
