$(function() {
	var articleId = sanmi.queryParam("articleId");
	var userId = sanmi.queryParam("userId");
	//妇幼头条文章对应评论
	articleCommentList();

		function articleCommentList() {
		var param = {
			url: '/headline/article/comment/list',
			data: {
				'articleId': articleId,
				'userId': userId,
			},
			method: 'post',
			dataType: 'json',
			callback: 'articleCommentHander',
		}
		sanmi.query(param);
	}
});
